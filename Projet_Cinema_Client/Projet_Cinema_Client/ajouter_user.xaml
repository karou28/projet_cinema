<UserControl x:Class="Projet_Cinema_Client.ajouter_user"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet_Cinema_Client"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="620">
   
          
        <Grid x:Name="g" HorizontalAlignment="Left" Height="443" Margin="-8,88,-16,0" VerticalAlignment="Top" Width="600">
            <Label x:Name="label" Content="Nom :" HorizontalAlignment="Left" Margin="70,10,0,0" FontWeight="bold" VerticalAlignment="Top" Width="78" Height="24"/>
            <Label x:Name="label21" Content="prénom :" HorizontalAlignment="Left" Margin="70,40,0,0" FontWeight="bold" VerticalAlignment="Top" Width="88" Height="26" RenderTransformOrigin="0.5,0.5">

