            <Label x:Name="label22" Content="Addresse :" HorizontalAlignment="Left" Margin="70,70,0,0" FontWeight="bold" VerticalAlignment="Top" Height="24" Width="86"/>
            <Label x:Name="label23" Content="email :" HorizontalAlignment="Left" Margin="70,100,0,0" FontWeight="bold" VerticalAlignment="Top" Height="26" Width="63"/>
            <Label x:Name="label24" Content="Store :" HorizontalAlignment="Left" Margin="70,130,0,0" FontWeight="bold" VerticalAlignment="Top" Width="60"/>
            <Label x:Name="label25" Content="username :" HorizontalAlignment="Left" Margin="70,160,0,0" FontWeight="bold" VerticalAlignment="Top" Width="80"/>

            <TextBox x:Name="nomm"  HorizontalAlignment="Left" Margin="281,10,0,0" VerticalAlignment="Top" Width="150" Height="24"/>
            <TextBox x:Name="prenomm"  HorizontalAlignment="Left" Margin="281,40,0,0" VerticalAlignment="Top" Width="150" Height="24"/>
            <ComboBox x:Name="addressem"  HorizontalAlignment="Left" Margin="281,70,0,0" VerticalAlignment="Top" Width="150" Height="24"/>
            <TextBox x:Name="emailm"  HorizontalAlignment="Left" Margin="281,100,0,0" VerticalAlignment="Top" Width="150" Height="24"/>
            <ComboBox x:Name="Storem"  HorizontalAlignment="Left" Margin="281,130,0,0" Width="150" VerticalAlignment="Top" Height="24"/>
            <TextBox x:Name="usernamem"  HorizontalAlignment="Left" Margin="281,160,0,0" VerticalAlignment="Top" Width="150" Height="24"/>
            <Button x:Name="valider" Content="valider" Click="valider_Click" HorizontalAlignment="Left" Margin="181,260,0,0" VerticalAlignment="Top" Background="blue" Foreground="white" Width="55"/>
            <Button x:Name="annuler" Content="annuler" HorizontalAlignment="Left" Margin="261,260,0,0" Background="green" Foreground="white" VerticalAlignment="Top" Width="57" Height="22"/>
            <Button x:Name="label1" Click="label1_Click" Content="Image path :" HorizontalAlignment="Left" FontWeight="bold" Margin="70,190,0,0" VerticalAlignment="Top" Height="26" Width="79"/>
            <TextBox x:Name="img" HorizontalAlignment="Left" Height="24" Margin="281,196,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="151"/>
            <Label x:Name="label2" Content="Password :" FontWeight="bold" HorizontalAlignment="Left" Margin="70,228,0,0" VerticalAlignment="Top" Width="76"/>
            <TextBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="281,230,0,0" VerticalAlignment="Top" Height="24" Width="150"/>

        </Grid>

    
</UserControl>
